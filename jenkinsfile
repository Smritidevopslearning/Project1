pipeline {
    agent any

    stages {
         
       stage('checkout') {
          steps {
            git url: 'https://github.com/Smritidevopslearning/Project1.git', branch: 'main'
          }
         
       } 
       stage('Initialize Terraform') {
          steps {
                sh '''
		        pwd
		        terraform init -no-color
		'''
            }
          }

        stage('terraform plan') {
            steps {
                sh '''
                pwd
                terraform plan -out=tfplan -no-color
                '''
            }
        } 
       }
    }

